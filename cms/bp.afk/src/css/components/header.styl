header
    width 100%
    height 100px
    .wrapper
        height 100%
        display flex
        flex-flow row wrap
        justify-content space-between
    a
        display flex
        height 100%
        align-items center
        justify-content flex-start
    h1
        margin 0
        display flex
        font-size 2.0em
        font-weight 700
    nav
        display flex
        ul
            display flex
            align-items center
            justify-content center
            li
                margin 0 10px 0 0
                &:last-child
                    margin 0
